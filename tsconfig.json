{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "es2015",
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src"]
}
